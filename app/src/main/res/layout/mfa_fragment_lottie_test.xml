<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".mfa.view_pager.LottieTest">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/AnimationView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="CorrectData.json" />
    <Button
        android:id="@+id/ReverseAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple"
        android:text="@string/ReverseAnimationMFA"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/ChangeAnimation"
        app:layout_constraintEnd_toEndOf="@+id/ChangeAnimation"
        app:layout_constraintStart_toStartOf="@+id/ChangeAnimation" />

    <Button
        android:id="@+id/ChangeAnimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/purple"
        android:text="@string/ChangeAnimationMFA"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>